{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "jsx": "react",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "lib": ["es2017", "DOM"],
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}